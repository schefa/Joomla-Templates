<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.1" type="template" client="site" method="upgrade">
	<name>Apas</name>
	<creationDate>2016-03-24</creationDate>
	<author>Fjodor Sch√§fer</author>
	<authorUrl>http://www.schefa.com</authorUrl>
	<copyright>Copyright (c) 2017 - Fjodor Schaefer</copyright>
	<license>GNU General Public License version 2 or later</license>
	<version>1.2.1</version>	
	<description>Apas - Free and Responsive Bootstrap Theme based on "Ananda"</description>
	
	<files>
		<filename>favicon.ico</filename>
		<filename>index.php</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<filename>templateDetails.xml</filename>
		<filename>error.php</filename>
		<folder>css</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>language</folder>
		<folder>lib</folder>
	</files>
	
	<languages folder="language"> 
		<language tag="en-GB">en-GB/en-GB.tpl_apas.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_apas.sys.ini</language>
		<language tag="de-DE">de-DE/de-DE.tpl_apas.ini</language>
		<language tag="de-DE">de-DE/de-DE.tpl_apas.sys.ini</language>
	</languages>
	
	<positions>
		<position>banner</position>
		<position>breadcrumbs</position>
		<position>footer</position>
		<position>header</position>
		<position>left</position>
		<position>logo</position>
		<position>login</position>
		<position>mainmenu</position>
		<position>content-bottom-1</position>
		<position>content-bottom-2</position>
		<position>content-bottom-3</position>
		<position>position-2</position>
		<position>position-3</position>
		<position>position-4</position>
		<position>position-5</position>
		<position>position-6</position>
		<position>position-7</position>
		<position>position-8</position>
		<position>position-9</position>
		<position>position-10</position>
		<position>position-11</position>
		<position>position-12</position>
		<position>position-13</position>
		<position>position-14</position>
		<position>right</position>
		<position>search</position>
		<position>submenu</position>
		<position>top</position>
	</positions>
	
	<config>
		<fields name="params">
			<fieldset name="advanced" label="TPL_APAS_SETTINGS">
			
				<field name="logo_image" type="media" default="" label="Logo" description="Logo image URL" />
				
				<field name="bgSpacer1" type="spacer" label="TPL_APAS_BGCOLOR" />
				<field name="bgcolor1" type="color" default="#333333" label="body" description="" />
				<field name="bgcolor2" type="color" default="#37769E" label="background" description=".apas-maincontent" />
				<field name="bgcolor3" type="color" default="#FFFFFF" label="content" description=".apas-header,.apas-content-outer,.sidebar-offcanvas > div,.apas-breadcrumbs ul" />
				<field name="bgcolor4" type="color" default="#F4F4F4" label="navigation-top" description=".navigation-top" />
				<field name="bgcolor5" type="color" default="#F9F9F9" label="navigation-bottom" description=".sidebar-offcanvas h3,.navigation-bottom" />
				
				<field name="fontSpacer" type="spacer" label="TPL_APAS_FONTCOLOR" />
				<field name="color1" type="color" default="#333333" label="body" />
				<field name="color2" type="color" default="#BBBBBB" label="footer" />
				<field name="color3" type="color" default="#73A9D1" label="links" />
				
				<field name="borderSpacer" type="spacer" label="TPL_APAS_BORDERCOLOR" />
				<field name="bordercolor1" type="color" default="#DDDDDD" label="1" />
				<field name="bordercolor2" type="color" default="#EEEEEE" label="2" />
				<field name="bordercolor3" type="color" default="#444444" label="3" />
				
				<field name="toggleAlias" type="spacer" hr="true" />
				<field name="toggleLeft" type="text" default="Toogle Left" label="TPL_APAS_TOGGLEL" />
				<field name="toggleRight" type="text" default="Toogle Right" label="TPL_APAS_TOGGLER" />
				
				<field name="bgSpacer" type="spacer" hr="true" />
				<field name="jquery" type="list" default="0" label="TPL_APAS_JQUERY" description="TPL_APAS_JQUERY_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				
			</fieldset>
		</fields>
	</config>
</extension>